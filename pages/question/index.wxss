/* pages/question/index.wxss */
.question-index {
  background: rgba(245, 245, 245, 0.7);
  min-height: 100vh;
}

.container {
  padding: 8px;
}

.music-control {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  height: 48rpx;
}

.music-control .button {
  display: flex;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  padding: 10rpx;
  background: rgba(255, 165, 0, 0.7);
  justify-content: center;
  align-items: center;
}

.music-control .button text {
  margin: auto;
}

.music-control .button:active {
  background: rgba(255, 165, 0, 1);
}

.question .question-tip {
  color: rgba(173, 216, 230, 0.7);
  font-weight: bold;
  font-size: 24rpx;
  padding-bottom: 16rpx;
}

.question .question-card {
  padding: 32rpx;

  color: rgba(105, 105, 105, 0.8);
  border-radius: 16rpx;
  font-size: 36rpx;
  border-bottom: dotted 1rpx rgba(105, 105, 105, 0.7);
}

.question .question-option {
  background: rgba(220, 220, 220, 0.5);
  color: rgba(105, 105, 105, 1);
  margin-bottom: 16rpx;
  font-size: 32rpx;
  border-bottom: none;
}

.question .question-option:active {
  background: rgba(220, 220, 220, 1);
}