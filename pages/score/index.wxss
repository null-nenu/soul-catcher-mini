/* pages/score/index.wxss */
.container {
  padding: 8px;
}

.score-index {
  background: rgba(245, 245, 245, 0.7);
  min-height: 100vh;
}

.score-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
}

.score-wrap .score-text {
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 250rpx;
  min-height: 250rpx;
  background: rgba(220, 220, 220, 0.5);
  backdrop-filter: blur(5px);
  color: rgba(105, 105, 105, 0.75);
  border-radius: 16rpx;
  padding: 16rpx;
}

.score-text text {
  font-size: 64rpx;
  font-weight: bold;
}

.score-content {
  color: rgba(105, 105, 105, 0.5);
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.recommend-navigator {
  padding: 32rpx;
}

.recommend-navigator .title {
  color: rgba(105, 105, 105, 0.5);
}

.recommend image {
  width: 128rpx;
  height: 128rpx;
  object-fit: cover;
}

.recommend .title {
  height: 50%;
  font-weight: bold;
}

.recommend .detail {
  height: 50%;
  font-size: 24rpx;
}

.text-wrap {
  background: rgba(220, 220, 220, 0.8);
  padding: 16rpx;
  border-radius: 16rpx;
}

.text-content {
  color: rgba(105, 105, 105, 0.7);
  font-size: 28rpx;
}

.text-title {
  color: rgba(105, 105, 105, 0.8);
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.recommends-wrap {
  background: rgba(220, 220, 220, 0.8);
  overflow: hidden;
  border-radius: 16rpx;
}